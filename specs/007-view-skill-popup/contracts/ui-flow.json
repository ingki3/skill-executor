{
  "feature": "View Skill Popup",
  "triggers": [
    {
      "element": "Button[View Skill]",
      "action": "onClick",
      "target": "DocumentationDialog",
      "effect": "open"
    }
  ],
  "dialog_states": {
    "open": {
      "onBackdropClick": "close",
      "onEscKeyPress": "close",
      "onCloseButtonClick": "close"
    }
  },
  "styling_rules": {
    "text_contrast": "WCAG 2.1 AA (4.5:1)",
    "max_height": "80vh",
    "overflow": "scroll-paper"
  }
}
